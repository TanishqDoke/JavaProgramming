import java.util.Scanner;

public class reverse {
    static void reverse(int n) {

        ;
        int cout = 0;

        while (n != 0) {
            int remainder = n % 10;             // To get the remainder we use the modulus function.

            cout = cout * 10 + remainder;       // We store the reversed number in cout variable.

            n = n / 10;                         // Remove the reversed digits from the original number.

        }
        System.out.println(cout);
    }


    public static void main(String[] args) {
        reverse(12);
        reverse(2134);
        reverse(8867326);
        reverse(6182908);
        reverse(231);
        reverse(987654321);

    }
}
